#: import MDRaisedButton kivymd.uix.button.MDRaisedButton
#: import MDLabel kivymd.uix.label.MDLabel
#: import MDTextField kivymd.uix.textfield.MDTextField
#: import MDFloatLayout kivymd.uix.floatlayout.MDFloatLayout

<Container>:
	orientation: "vertical"
	spacing: 50

	input_surname: input_surname
	input_name: input_name
	input_lastname: input_lastname
	input_mail: input_mail
	input_phone: input_phone

	MDLabel:
		text: "Регистрация"
		font_size: 40sp

	MDTextField:
		id: input_surname
		hint_text: "Фамилия"
		multiline: False
		font_size: 20sp

	MDTextField:
		id: input_name
		hint_text: "Имя"
		multiline: False
		font_size: 20sp

	MDTextField:
		id: input_lastname
		hint_text: "Отчество"
		multiline: False
		font_size: 20sp

	MDTextField:
		id: input_mail
		hint_text: "Адрес эл.почты"
		multiline: False
		font_size: 20sp

	MDTextField:
		id: input_phone
		hint_text: "+7 (___)___-__-__"
		multiline: False
		font_size: 20sp
		input_type: 'number'
		input_filter: 'int'

	MDFloatLayout:
		MDRaisedButton:
			size_hint: 0.5, 0.4
			pos_hint: {'center_x' : 0.5, 'y' : 0.1}
			text: "Начать"
			font_size: 20sp

			on_realize:
				root.click_on_button_register()

