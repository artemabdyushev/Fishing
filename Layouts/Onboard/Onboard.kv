#: import MDFloatLayout kivymd.uix.floatlayout.MDFloatLayout
#: import MDLabel kivymd.uix.label.MDLabel
#: import MDRaisedButton kivymd.uix.button.MDRaisedButton
#: import MDFloatLayout kivymd.uix.boxlayout.MDBoxLayout
#: import MDScreen kivymd.uix.screen.MDScreen

<Container>:
	MDFloatLayout:
		FitImage:
			source: "pictures/fish.png"
			size_hint: 1, 1

		MDLabel:
			text: 'Ваш гид по лучшим местам для рыбалки.'
			color: (1, 1, 1, 1)
			font_size: '35sp'

		MDLabel:
			text: 'Ваш помощник и гид по лучшим местам для рыбалки.'
			color: (170, 176, 190, 1)
			pos_hint: {'y' : 0.1}

		MDFloatLayout:
			MDRaisedButton:
				size_hint: 0.4, 0.1
				height: 50
				pos_hint: {'center_x' : 0.5, 'y' : 0.1}
				text: "Регистрация"
				font_size: '20sp'

				on_release:
					root.click_on_button_start()
